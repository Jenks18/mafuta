{
  "appId": "com.mafutapass.app",
  "appName": "Mafutapass",
  "webDir": "dist",
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false
  },
  "plugins": {
    "CapacitorHttp": {
      "enabled": true
    },
    "StatusBar": {
      "style": "LIGHT",
      "backgroundColor": "#2563eb",
      "overlaysWebView": false
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#2563eb",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false
    }
  }
}
